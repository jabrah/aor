    	<!-- Underlines -->
	<underline method="pen" type="straight" language="EN" text="well ordeyned, do"/>
    	<underline method="pen" type="straight" language="EN" text="be not well"/>
    	<underline method="pen" type="straight" language="EN" text="the good orders"/>
    	<underline method="pen" type="straight" language="EN" text="do disorder, then"/>
    	<underline method="pen" type="straight" language="EN" text="a sumptuous"/>
    	<underline method="pen" type="straight" language="EN" text="without being couered"/>
    	<underline method="pen" type="straight" language="EN" text="to defende it from the raine"/>
    	<underline method="pen" type="straight" language="EN" text="men faithfull"/>
    	<underline method="pen" type="straight" language="EN" text="peaceable, and full of"/>
    	<underline method="pen" type="straight" language="EN" text="in the seruice"/>
    	<underline method="pen" type="straight" language="EN" text="warre, it was doubled"/>
    	<underline method="pen" type="straight" language="EN" text="greater faith, then"/>
    	<underline method="pen" type="straight" language="EN" text="loue of peace,"/>
    	<underline method="pen" type="straight" language="EN" text="more feare"/>
    	<underline method="pen" type="straight" language="EN" text="God, then"/>
    	<underline method="pen" type="straight" language="EN" text="most neede of his"/>
    	<underline method="pen" type="straight" language="EN" text="lawes to Empires"/>
    	<underline method="pen" type="straight" language="EN" text="to the exercise"/>
    	<underline method="pen" type="straight" language="EN" text="seruice were appointed"/>
    	<underline method="pen" type="straight" language="EN" text="life of Souldiours"/>
    	<underline method="pen" type="straight" language="EN" text="men was praised, and with"/>
    	<underline method="pen" type="straight" language="EN" text="the orders of seruice of warre"/>
    	<underline method="pen" type="straight" language="EN" text="altogether corrupted, and a great waye"/>
    	<underline method="pen" type="straight" language="EN" text="maners altered, there"/>
    	<underline method="pen" type="straight" language="EN" text="impossible, to bring"/>
    	<underline method="pen" type="straight" language="EN" text="the aunciente maners"/>
    	<underline method="pen" type="straight" language="EN" text="to giue it some"/>
    	<underline method="pen" type="straight" language="EN" text="vertue passed, I"/>
    	<underline method="pen" type="straight" language="EN" text="write that which I do understande, of the arte"/>
    	<underline method="pen" type="straight" language="EN" text="the satisfiyng of those, who are louers"/>
    	<underline method="pen" type="straight" language="EN" text="artes. And"/>
    	<underline method="pen" type="straight" language="EN" text="be a bolde thing"/>
    	
