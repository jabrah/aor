    xsi:noNamespaceSchemaLocation="http://www.livesandletters.ac.uk/schema/aor2_18112016.xsd">
    <page filename="028.tif" reader="John Dee" signature="a 3" pagination="5"/>
    <annotation>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Difficilia qu[a]e pulchra.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Difficult things are beautiful.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Cur res diuina[e] difficili inquisitione reruantur.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Why divine things are being destroyed again by a difficult investigation.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        qua r[ati]o[n]e res diuinas discamus 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                By which means we may acquire knowledge of divine matters.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Discere est recordari.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Learning is to recollect.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Venere[m] et mercuriu[m] circa solem percurrere 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                That Venus and Mercury run around the Sun.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="Vnde si impugnat is, qui &agrave; prudentissimo Mathematico, &amp; audiuit aliquid, &amp; credidit, &amp; probauit"/>
        <underline method="pen" type="straight" language="LA" text="Quod uero nos in isto studio"/>
        <underline method="pen" type="straight" language="LA" text="temporalem"/>
        <underline method="pen" type="straight" language="LA" text="retinens, uim suae maiestatis agnouerit, omnia, quae difficilia, atque ardua putantur, facile diuinae mentis inuestigatione consequatur"/>
        <underline method="pen" type="straight" language="LA" text="nisi animo, qui ex coelisti igne profectus, ad regimen, &amp; gubernationem terrenae fragilitatis, immissus est? Ipse"/>
        <underline method="pen" type="straight" language="LA" text="breui maiestatis  suae recordatione, haec omnia, ut traderet, non didicit, sed agnouit. Ecce"/>
        <underline method="pen" type="straight" language="LA" text="humectam uenerit domum, ignes suos, natura alieni frigoris temperat, &amp; licet"/>
        <underline method="pen" type="straight" language="LA" text="interiecto spatio, circa solis orbem percurru[n]t pariret, aut sequu[n]tur, aut una subseque[n]s stella"/>
        <underline method="pen" type="straight" language="LA" text="quando pauperata luminibus"/>
        
