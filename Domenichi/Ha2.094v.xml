	<page filename="Ha2.094v.tif" signature="[A6v]" pagination="12" reader="Harvey"/>	<!-- ABO 99left -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Stultus est, qui non sapit sine Libris.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who knows nothing without books is a fool.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Magistratus, lex loquens: sapiens, animata
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						bibliotecha. Omnes in 
						Ca[e]sare manes. In vno omnes Magni.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The magistrate, a speaking law; the wise man, a living library.
				Everything is in the hands of Caesar. Everything in one great man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Da mihi talem Amorem in Artibus, et Virtutibus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Give me such love in the Arts and Virtues.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Sera nimis Vita est crastina: viue hodi&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The life of tomorrow is too late; live today.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Cupido, flammis armatus: apud poetas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Cupid is armed with flames, according to the poets.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Omnem excedit amor, visq[ue] coacta modum. Axiophilus.
						
						Sapiens, sibi Microcosmus; et Vnus, Omnia. Ca[e]tera, sibi parerga.
					</marginalia_text>
				</position>
			</language>
			<translation>
				<!-- CG: Missing text added. -->
				
				The wise man, a Microcosm for himself; and one, all things.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Eccentrica quot, et
					</marginalia_text>
				</position>
				<position place="tail" book_orientation="270">
					<marginalia_text>
						quanta?
					</marginalia_text>
				</position>
			</language>
			<translation>
				Eccentric matters: how many and to what degree?
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						Sapiens Theodori, Aristippi, Aristotelis, Epicuri, filius huius seculi: qualis etiam
						interdum, Sapiens Antisthenis, Diogenis, Zenonis, ipsiusq[ue] etiam Platonis.
					</marginalia_text>
					<person name="Theodorus the Atheist"/>
					<person name="Aristippus"/>
					<person name="Aristotle"/>
					<person name="Epicurus"/>
					<person name="Antisthenes"/>
					<person name="Diogenes of Sinope"/>
					<person name="Zeno"/>
					<person name="Plato"/>
					<emphasis method="pen" type="straight" text="Sapiens Theodori"/>
					<emphasis method="pen" type="straight" text="filius huius seculi"/>
					<emphasis method="pen" type="straight" text="Sapiens Antisthenis"/>
				</position>
			</language>
			<translation>
				The philosopher of Theodorus, Aristippus, Aristotle, Epicurus is the child of this generation,
				indeed, just now and then the philosopher of Antisthenes, Diogenes, Zeno, and even Plato himself.
			</translation>
		</marginalia>
		
