	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Nullius vnq[uam] vigor satis exertus: aut industria satis
						extensa. Sui quotidi&egrave;
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						obliuiscitur
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						) hominu[m]
						dilige[n]tissimus: et suo ipsius fini quis non aliquando
					</marginalia_text>
				</position>
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						repugnat in Medijs?
					</marginalia_text>
				</position>
			</language>
			<translation>
				No one's vigor is ever exerted enough, or industriousness extended enough.
				The most diligent of men forgets himself daily, and who doesn't ever renounce
				his own goal in the middle of things?
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						solid&egrave; Theseus.
					</marginalia_text>
					<person name="Theseus"/>
				</position>
			</language>
			<translation>
				Theseus, solidly.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Da mihi absolut&egrave; sapientem,
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						qui et Sui ipsius, et sui finis est inuiolabiter memor.
						Illu[m] requiro seriu[m], qui
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						) Sibi ipsi in Optimis perpetu&ograve;
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						constat:
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						remissionem omnem odit,
						vt venenum: intentionem Semper molitur instantissim&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Give me an absolutely wise man, who is inviolably mindful of both himself and his goal;
				who is continuously constant with himself in the greatest matters; <!--JG: You forgot to translate 'Illu[m] requiro seriu[m]'?-->
				who hates every diminishing as if it were poison;
				who always keeps to his plan most urgently.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						risoluto Re.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A resolute king.
			</translation>
		</marginalia>		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						Quicquid 
						) potentissimu[m]
					</marginalia_text>
				</position>
				<position place="tail" book_orientation="0">
					<marginalia_text>
						potest, id superaddit vehementissim&egrave;. Sed quasi
						aliud agens, cum Hoc agit mirific&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whatever can be most powerful is most emphatically added.
				But as if doing something else, when doing this most wonderfully.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						risoluto, e tranquillo.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				Resolute and tranquil.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Electuarium Regis: electuarium Regina[e]: electuarium Principis: electuarium Ducis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The electuary of the king; the elctuary of the queen; the electuary of the prince; the electuary of the duke.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Eminet ante omnes, qui gerit omne bonum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who manages every good situation stands out from all the rest.
			</translation>
		</marginalia>
		
