		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Vir, semper paratus: semper alatus.
					</marginalia_text>
				</position>
			</language>
			<language ident="IT">
				<position place="head" book_orientation="0">
					<marginalia_text>
						questo punto.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A man who is always prepared is always winged. This point.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Vt perlarum magisterium extrahendum: sic omniu[m] memorabilium.
					</marginalia_text>
				</position>
			</language>
			<translation>
				As teaching must be extracted from pearls, so too must it be extracted from all noteworthy things.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Sera nimis vita est Crastina: viue hodi&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A life tomorrow is too late: live today.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						{ Ars, iuuenis: Virtus,
						vir: Furor ipse, Deus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Art is a young man; virtue is an old man; fury itself is God.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						) Viuat vir.
						Non Quis, sed quid.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Let man live.
				Not who, but what.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Etiam maxima, magno actore minora.
						Qua[e] alijs grauissima, huic uni leuia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Even the greatest things are lesser for a great actor.
				Those things which are heaviest for another are light for him alone.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Qui non est hodi&egrave;, cras min&ugrave;s aptus erit. 
					</marginalia_text>
				</position>
			</language>
			<language ident="EL">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						μηδὲν ἀναβαλλόμενος:
					</marginalia_text>
					<X-ref person="Alciati" book_title="Emblemata" language="EL" text="μηδὲν ἀναβαλλόμενος"/>
						<!-- Emblem 3 -->
				</position>
			</language>
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Alexandru[m] fecit magnu[m].
					</marginalia_text>
					<person name="Alexander the Great"/>
				</position>
			</language>
			<translation>
				He who is not present today will be less capable tomorrow.
				"Never postpone": this motto made Alexander great.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Homo est bestia, qui non se cogit quotidi&egrave; esse hominem.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The man who does not force himself daily to be a man, is a beast.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="FR">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Desir n'a repos.
					</marginalia_text>
				</position>
			</language>
			<language ident="LA">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Nec mora, nec requies: &egrave; Ca[e]saris disciplina.
					</marginalia_text>
					<person name="Julius Caesar"/>
				</position>
			</language>
			<translation>
				Desire does not rest. 
				Neither delay, nor rest: from the training of Caesar.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Aut viuam lepid&egrave;: aut moriar magnific&egrave;. Eutrapelus autarces.
					</marginalia_text>
					<person name="Eutrapelus"/>
				</position>
			</language>
			<translation>
				Either I shall live pleasantly, or I shall die magnificently. The self-sufficiency of Eutrapelus.
			</translation>
		</marginalia>
