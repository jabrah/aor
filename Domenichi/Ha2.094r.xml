	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Ex abundantia Cordis, os loquitur. &Egrave; bibliotheca tui ipsius
					</marginalia_text>
					<X-ref person="Matthew" book_title="Gospel of Matthew" language="LA" text="ex abundantia enim cordis os loquitur"/>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						pectoris, peritissima[e] Sententia[e].
					</marginalia_text>
				</position>
			</language>
			<translation>
				"The mouth speaks due to the abundance of the heart." The most expert opinions
				from the library of your very own breast.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						dilemma retortum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The dilemma of the retort.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Deficiente spiritu, aut etiam paulisper languescente;
						statim omnia animi,
						corporisq[ue] bona flaccescunt.
					</marginalia_text>
				</position>
			</language>
			<translation>
				By lacking in spirit, or even languishing for a little while,
				all good things of the mind and body wither immediately.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						) Quotidi&egrave; pra[e]stantior.
					</marginalia_text>
				</position>
			</language>
			<translation>
				More excellent every day.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						{ Dimidium foelicitatis, Alacritas: et Virginitas,
						immortalitatis dimidium. ex arcanis Eudromi.
					</marginalia_text>
					<person name="Eudromus"/>
				</position>
			</language>
			<translation>
				Half of happiness is cheerfulness, and half of immortality is virginity.
				From the secrets of Eudromus.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						risoluto.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Resolute.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						( Ex teipso auctore singula:
						quoti&egrave;s opus. )
					</marginalia_text>
				</position>
			</language>
			<translation>
				Single matters from you yourself as author: a daily task.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Cit&ograve; perficitur, quod nauiter efficitur. Viru[m] probat virtus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whatever is diligently begun is immediately finished. Virtue proves the man.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Gnomologi multi: paucissimi Mimologi.
					</marginalia_text>
				</position>
			</language>
			<translation>
				There are many who study wisdom [gnomologists], and few who study mimes [mimologists]. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Ex viva[e] mentis visceribus, fluentissima[e] sententia[e], et profundiss[im]a[e].
						De viuo fonte quatuor Virtutu[m], Ethica[e]: quatuor Elementoru[m], Physica[e].
					</marginalia_text>
					<emphasis method="pen" type="straight" text="viua[e] mentis visceribus"/>
					<emphasis method="pen" type="straight" text="fluentissima[e] sententia[e]"/>
					<emphasis method="pen" type="straight" text="profundiss[im]a[e]"/>
					<emphasis method="pen" type="straight" text="quatuor Virtutu[m]"/>
					<emphasis method="pen" type="straight" text="quatuor Elementoru[m], Physica[e]"/>
				</position>
			</language>
			<translation>
				The most profound and flowing ideas from the innermost part of a living mind.
				Ethics, regards the living source of the four Virtues; Physics, [regards the living source of] the four elements.
			</translation>
		</marginalia>
		
