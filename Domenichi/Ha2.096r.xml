	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						De fa[e]ce non haurit Musa Attica: nec Aquila capit Muscas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The Greek Muse does not drink the dregs, nor does the Eagle capture Flies.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						De minutis non curat Jureconsultus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The lawyer cares not for minutiae.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Affectatio Singularitatis perpetua.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A continual striving for singularity.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Ingenij, et Virtutis panis quotidianus, Temperantia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Temperance is the daily bread of genius and virtue.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Contemplationis, actionisq[ue] esca.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The food of contemplation and action.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						A mans tounge, is his honour, or shame. Salomo.
					</marginalia_text>
					<person name="Solomon"/>
					<X-ref person="Yeshua Ben Eliezer Ben Sira" book_title="Ecclesiasticus"/>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Lingua, bonorum optimum: malorum pessimu[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				Language is the best aspect of good men and the worst aspect of evil men.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						I looue Epitomes: but not Deminutiues.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						( Satis: si satis prompt&egrave;, et absolute. )
					</marginalia_text>
				</position>
			</language>
			<translation>
				It is enough, if done promptly and completely enough.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Magneticus, et marmoreus valor: maximus
						mundi attractivus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A magnetic and marble valor is the greatest attractive valor in the world. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Elegans eloquendi facilitas; et ciuilis conversandi gratia; vtraq[ue]
						apta, et decora; duo cuiusq[ue] pra[e]clari hominis complementa. 
					</marginalia_text>
				</position>
			</language>
			<translation>
				An elegant facility in speaking and a civil gracefulness in conversing; both
				appropriate and decorous, both complementary aspects of any illustrious man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						Fortis animus; et astutum ingenium; duo pragmatici arcana, semper securi.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A strong mind and an astute natural character, two concealed aspects of a pragmatic man who is always untroubled. 
			</translation>
		</marginalia>
		
