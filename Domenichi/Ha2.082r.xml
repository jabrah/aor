	<page filename="Ha2.082r.tif" signature="**2[r]" reader="Harvey"/>	<!-- ABO 86right -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						{ Totum viri: non dimidium hominis: vt isti
						vulgares.
					</marginalia_text>
				</position>
			</language>
			<translation>
				All of the man, not half of one, like those commoners.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Ipse Habitus viri.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The habit itself of a man.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Vnus, idemq[ue]: quicquid, aut quicunq[ue].)
					</marginalia_text>
				</position>
			</language>
			<translation>
				One and the same, whatever or whoever.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Miser homo, cui adhuc discenda &egrave; libris
						Virtus, aut industria.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				Miserable is the man for whom virtue and industry must still be learned from books.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Nullus panis, aut vinum tantum alit, quantu[m] panis,
						vinumq[ue] Sudoris.
					</marginalia_text>
				</position>
			</language>
			<translation>
				No bread or wine nourishes as much as the bread or wine of hard labor.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Semihominu[m] plenus mundus, id est, nugaru[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				The world is full of half-men, that is, of triflers.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						/ Purissima aqua uita[e], aqua 
						/ Sudoris: ipsa corporis, animiq[ue] quinta essentia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The purest water of life is the water of hard labor, the fifth essence itself of body and mind.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Homo omnium horarum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A man for all seasons.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Quarto modo Suus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				His fourth way.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Ego meissimus Tibi tuissimo S[alutem] P[lurimam] D[ico].
					</marginalia_text>
				</position>
			</language>
			<translation>
				I very much myself send many greetings to you very much yourself.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Anatom[ia] Singuloru[m], est victoria omnium. Analysis Librorum, est genesis operum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The anatomy of singular men is the victory of all men. The analysis of books is the birth of works.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Bonus animus, et bonum corpus, facil&egrave; possunt bonam fortunam.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A good mind and a good body can easily make good fortune.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Puerile est, reuerti ad studia puerilia: aut retrogradu[m] esse planeta[m] ad scholastica commenta, quoru[m] vsum
						nescit mundus.						
					</marginalia_text>
				</position>
			</language>
			<translation>
				It is childish to turn back to childish studies, or for a star to go backwards to scholastic commentaries, whose usage the world has forgotten. 
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Miseret me hominis, nescientis Seipsum virum: et Mundum Semihominum.
						Interim pro se quisq[ue]: Entelechia in suis: Ironia in alienis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				I pity the man who does not know that he is a man and the world of half-man.
				Nevertheless, each for himself: actualization for friends, irony for strangers. 
			</translation>
		</marginalia>
		
