	<page filename="Ha2.113v.tif" signature="[Dv]" pagination="50" reader="Harvey"/>	<!-- ABO 118left -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="head" book_orientation="0">
					<marginalia_text>
						A brother in Law told mee in good plaine earnest;
						when he saw mee do such, &amp;
						such things, he would beleeue it.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Mie answer was:
						Bielike you meane to do mee no fauour: &amp; when you ar
						a Judg, He prooue it vnto you. In the meane time He rather knowe it miself, then
					</marginalia_text>
				</position>
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						teach it a frend for his owne aduantage.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Qua[e]re, quar&egrave;. )
					</marginalia_text>
				</position>
			</language>
			<translation>
				Inquire, inquire.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Manie frends for their owne aduantage, or for a fashion.
						To do you good at your neede, not a frend in a world.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Qui contemnunt, contemnantur. Tu tua persequere.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Those who look down upon others are looked down upon. Pursue your own matters.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Parcus vescendi; sed parcior est bibendi: Ingenij Largus: prodigus officij. Theurgi regimen.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Be frugal in eating, and even more frugal in drinking. Be liberal in character and plentiful in favor. This is the regimen of the theurge.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Nunq[uam] sera via est ad sapientis opus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The path late at night is never necessary for the wise man. <!-- CG: 'sera via' is peculiar. -->
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Desperare, abiecti: diffidere, simplicis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The abject man despairs; the simple man distrusts.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						Seruiat a[e]ternum, qui paruo nesciet vti.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who does not know how to make use of little, let him serve for eternity.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						Opus non est, quod non est meum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whatever is not mine is not necessary.
			</translation>
		</marginalia>
		
