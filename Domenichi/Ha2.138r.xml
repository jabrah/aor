		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Ignavus est, qui plus potest, qu&agrave;m vult. Vanus est,
						qui plus vult, qu&agrave;m potest. Ignobilis est, qui
						non putat se posse, quod alius potest.
					</marginalia_text>
					<emphasis method="pen" type="straight" text="Ignavus est"/>
					<emphasis method="pen" type="straight" text="Vanus"/>
					<emphasis method="pen" type="straight" text="Ignobilis est"/>
				</position>
			</language>
			<translation>
				He who can do more than he wants is a coward.
				He who wants more than he can is vain.
				He who does not believe that he can do what others can is ignoble.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						Aliter etiam Eutrapelus, vt res ferebat:
					</marginalia_text>
					<person name="Eutrapelus"/>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						) vilis est,
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						qui
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						non vult,
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						quantu[m] potest.
						Ignauus est, qui no[n] potest, quantum vult.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Otherwise, even Eutrapelus as he carried out the matters. 
				he who does not want as much as he can achieve is cheap.
				He who cannot do as much as he wants is a coward.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						serio Principe.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A serious prince.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Apparet Virtus,
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						arguiturq[ue] Malis.
					</marginalia_text>
				</position>
			</language>
			<language ident="IT">
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						risoluto.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Virtue appears and is denounced by evil. 
				Resolute.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						The predominant spirit.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Luciani Rhetor.)
					</marginalia_text>
					<person name="Lucian"/>
				</position>
			</language>
			<translation>
				Lucian's rhetorician.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Ignavus est, qui minus vult, qu&agrave;m potest.
						Vanus est, qui plus vult, qu&agrave;m potest.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who does less than he can is a coward.
				He who wants more than he can is vain.
			</translation>
		</marginalia>
		
