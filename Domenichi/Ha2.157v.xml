	<page filename="Ha2.157v.tif" signature="[I5v]" pagination="138" reader="Harvey"/>	<!-- ABO 162left -->
	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						&Agrave; uiro in virum quotidi&egrave;, vt Eudromus: quotidi&egrave; &agrave; sopho
						in sophum. Semper vir, semper.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Plus, plusq[ue] viri &agrave; die in diem: plus, plusq[ue] sophi ab hora
						in horam.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Qui non proficit &agrave; momento in momentum, deficit.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Qui non crescit virtute, et praxi, decrescit.
						Semper plus vigoris, et industria[e], semper, semper.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Proprius quidam habitus virilis fortitudinis, profunda[e] prudentia[e], et diuina[e]
						Constantia[e]: ab hoc Principio viuendi ad finem vsq[uam] vita[e].
						Vita non est vita sed miseria; sine foelicitate vel externa,
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="90">
					<marginalia_text>
						vel saltem interna.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="90">
					<marginalia_text>
						Nihil viro tam Necessarium, qu&agrave;m quotidiana
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						la[e]titia, exercitatio, sudor. Nullus sine sudore dies.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Solus sapiens vtitur omnibus perit&egrave;: etiam abusu: et rect&egrave; procedit contra Cursuu[m].  
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
	</annotation>
