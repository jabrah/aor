	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Acut&egrave; prudens, semper ad rem: et cum effectu.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Keenly prudent, and always focused on the matter with purpose. 
			</translation>
		</marginalia>
		<marginalia hand="Italian" marginalia_id="Ha2.078v_0001" marginalia_continues_to="Ha2.079r_0001" marginalia_to_transcription="Ha2.079.xml" book_id="FolgersHa2">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Quidvis audeo, pra[e]ter impossibile: et quod = [[*8r]: = intolerabilius est, turpe.]
							<!-- Continues onto facing page, head, Ha2.080r -->
					</marginalia_text>
				</position>
			</language>
			<translation>
				I dare whatever you want, beyond the impossible. And that which [[*8r]: is more tolerable is disgraceful.]
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Excellere, pulcherrimu[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				To excel is a most beautiful thing.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Nemo dictis,
						) aut factis satis excellit:
						ne omnium quide[m]
						excellentissimus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				No one excels sufficiently in deeds and acts,
				not even the most excellent of all.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Qui plurimu[m] potest, paru[m] potest.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				Whoever can do much can also do little.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Ego Eutrapelo S[imilis].
							<!-- CG: Similar question as the previous page; want to confirm that this is the abbreviation for "similis." -->
					</marginalia_text>
					<person name="Eutrapelus"/>
				</position>
			</language>
			<translation>
				I am similar to Eutrapelus.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Salue: profice: perfice: vale.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Hail, make something, accomplish something, farewell.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Ars Solis: et Virtus Solis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The art of the Sun and the virtue of the Sun.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Euge: Solsequium.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Aha! The sun-plant. 
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Vinum Solis:
						) et panis Solis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The wine and bread of the sun.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Delicia[e] Orientis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The pleasures of the Rising Sun.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Hymnus Solis: Canticu[m] Canticoru[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				The hymn of the Sun, the Song of Songs.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Subtiliter prudens est, qui omnia parerga, heta[e]rogenea, et inefficacia vbiq[ue] resecat:
						et sola negociatur seria ad instantem, et potentem vsum. Semper = 
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						= Hoc agens, et celeri&ugrave;s, et perfecti&ugrave;s, qu&agrave;m quisq[uam] alius potuisset.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who everywhere cuts off all ornamentation, dissimilar elements, and useless things is subtly prudent.
				And he engages only in serious matters of immediate and influential use. By always doing this, he can
				be faster and more accomplished than anyone else.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Aut semper contende extremis viribus: aut es ignavus.
					</marginalia_text>
				</position>
			</language>
			<translation>Either always compete with extreme men: or you are cowardly.</translation>
		</marginalia>
		
