    <page filename="earbm_stc_11402_0008.tif" reader="Harvey" pagination="title page"/>
    <annotation>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>Vel Arte, Vel Marte.</marginalia_text>
                </position>
            </language>
            <translation>Either with skill or by force.</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="left_margin" book_orientation="90">
                    <marginalia_text>Ser&ograve;, sed seri&ograve;. Nulla dies sine linea.</marginalia_text>
                    <X-ref person="Pliny the Elder" book_title="Natural History" language="LA" text="Nulla dies sine linea"/>
                </position>
            </language>
            <translation>Late but in earnest. "No day without line."</translation>
        </marginalia>
        
        <marginalia hand="Italian" date="1588">
            <language ident="LA">
                <position place="right_margin" book_orientation="270">
                    <marginalia_text>1588. Reuolutio mea[e] Reformationis, seu Annus Assuetudinis.</marginalia_text>
                </position>
            </language>
            <translation>1588. The turning of my reformation, or the year of experience.</translation>
        </marginalia>
        
        <marginalia hand="Italian" date="1578">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>Precium [.] xxd. 1578.</marginalia_text> <!--JG: Unsure what follows after precium and before xxd-->
                    <emphasis method="pen" type="straight" text="1578."/>
                </position>
            </language>
            <translation>Price. 20 penny</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="intext" book_orientation="0">
                    <marginalia_text>Wecceri Secreta, multa habent polemica, et mechanopoietica[n] praesertim &egrave; Cardano.</marginalia_text>
                    <person name="Johannes Jacob Wecker"/>
                    <person name="Girolamo Cardano"/>
                    <book title="De secretis libri XVII"/>
                </position>
            </language>
            <translation>Wecker's Secrets, have many polemics, and especially the mechano-poetica from Cardano. </translation> <!--JG: Unsure about how to translate mechanopoietica-->
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>Du[m]  potiar, patiar.</marginalia_text>
                    <X-ref person="Apuleius" book_title="Apologia" language="LA" text="Dum  potiar, patiar."/>
                </position>
            </language>
            <translation>"While I acquire, I suffer."</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="intext" book_orientation="0">
                    <marginalia_text>Gabrielis Harueij.</marginalia_text>
                    <person name="Gabriel Harvey"/>
                </position>
            </language>
            <translation>Gabriel Harvey.</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="intext" book_orientation="0">
                    <marginalia_text>Non qu&ucirc;, sed qu&ocirc;</marginalia_text>
                    <X-ref person="Anonymous" book_title="Thronus cupidinis" language="LA" text="Non qu&ucirc;, sed qu&ocirc;"/>
                </position>
            </language>
            <translation>"Not by what, but where."</translation>
        </marginalia>
        
