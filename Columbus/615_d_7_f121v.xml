        <underline method="pen" type="straight" language="IT" text="CCCLX huomini &agrave; piedi, &amp; XIIII a cauallo, accioche scorresse con"/>
        <underline method="pen" type="straight" language="IT" text="l'Isola, riducendola al seruigio"/>
        <underline method="pen" type="straight" language="IT" text="all'obedienza de' Christiani"/>
        <underline method="pen" type="straight" language="IT" text="prouincia di Cibao"/>
        <underline method="pen" type="straight" language="IT" text="dalla quale si aspettaua"/>
        <underline method="pen" type="straight" language="IT" text="principale utile, essegu&igrave; il tutto"/>
        <underline method="pen" type="double" language="IT" text="come prima"/>
        <underline method="pen" type="double" language="IT" text="alla Vega"/>
        <underline method="pen" type="double" language="IT" text="&amp; pacificar l'Isola"/>
        <underline method="pen" type="triple" language="IT" text="anzi fu cagione"/>
        <underline method="pen" type="straight" language="IT" text="discordie, &amp; partialit&agrave;"/>
        <underline method="pen" type="straight" language="IT" text="obedissero a' suoi commandamenti"/>
        <underline method="pen" type="straight" language="IT" text="mandar loro lettere"/>
        <underline method="pen" type="straight" language="IT" text="di farsi a tutti superiore"/>
        <underline method="pen" type="straight" language="IT" text="s'imbarc&ograve; ne' primi nauigli, che uennero di Castiglia"/>
        <underline method="pen" type="double" language="IT" text="ordine alcuno"/>
        <underline method="pen" type="straight" language="IT" text="sopra la gente"/>
        <underline method="pen" type="straight" language="IT" text="Da che successe, che ciascuno and&ograve; fra gl'Indiani, doue piu gli piacque, togliendo lor la robba"/>
        <underline method="pen" type="triple" language="IT" text="&amp; le donne"/>
        <underline method="pen" type="straight" language="IT" text="loro tanti dispiaceri, che gl'Indiani"/>
        <underline method="pen" type="straight" language="IT" text="uendetta in quelli, che"/>
        <underline method="pen" type="straight" language="IT" text="Guatigana"/>
        <underline method="pen" type="straight" language="IT" text="uccise dieci"/>
        
