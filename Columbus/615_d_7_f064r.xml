        <underline method="pen" type="straight" language="IT" text="che andassero con essa tre Indiani di"/>
        <underline method="pen" type="straight" language="IT" text="&amp; tre Christiani"/>
        <underline method="pen" type="straight" language="IT" text="di mille case"/>
        <underline method="pen" type="straight" language="IT" text="tutti abandonarono la popolatione"/>
        <underline method="pen" type="straight" language="IT" text="Ma l'Indiano"/>
        <underline method="pen" type="straight" language="IT" text="nostri da San Saluatore"/>
        <underline method="pen" type="double" language="IT" text="&amp; predico&ograve; loro"/>
        <underline method="pen" type="straight" language="IT" text="tanto ben lor disse de' Christiani, affermando"/>
        <underline method="pen" type="straight" language="IT" text="eran"/>
        <underline method="pen" type="straight" language="IT" text="che veniua dal Cieol"/>
        <underline method="pen" type="straight" language="IT" text="tornar quieti, &amp;"/>
        <underline method="pen" type="straight" language="IT" text="metteuano la man su la testa a' nostri, come per honore, &amp; portauano lor da mangiare, &amp; dauan lor tutto quello, che ricercauano, senza dimandar per ci&ograve; cosa alcuna; pregandoli"/>
        <underline method="pen" type="straight" language="IT" text="volessero rimanere quella notte nella lor popolatione"/>
        <underline method="pen" type="straight" language="IT" text="che la gente era molto pi&ugrave; bianca, &amp; piu bella di quanta fino allhora haueuano veduta"/>
        <underline method="pen" type="double" language="IT" text="era trattabile"/>
        <underline method="pen" type="double" language="IT" text="&amp; di buonissima conuersatione"/>
     
        
        
