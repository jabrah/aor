        <marginalia hand="Italian" anchor_text="Neyther doe I beleaue [that] there are any more in the world, those Pylades
            &amp; Orestes, Theseus and Perithous, nor Scipio and Laelius,">
            <language ident="EN">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Musidorus &amp; Pyrocles.
                    </marginalia_text>
                    <person name="Musidorus"/>
                    <person name="Pyrocles"/>
                    <X-ref person="Philip Sidney" book_title="The Countess of Pembroke's Arcadia"/>
                </position>
            </language>
        </marginalia>
        
        <underline method="pen" type="straight" language="EN" text="a foolishe and light person"/>
        <underline method="pen" type="straight" language="EN" text="he wried his head"/>
        <underline method="pen" type="straight" language="EN" text="bowed his"/>
        <underline method="pen" type="straight" language="EN" text="inuited with a cheerfull countenaunce"/>
        <underline method="pen" type="straight" language="EN" text="of their cappes to"/>
        <underline method="pen" type="straight" language="EN" text="gase earnestly with his eyes abashed"/>
        <underline method="pen" type="straight" language="EN" text="had lytle"/>
        <underline method="pen" type="straight" language="EN" text="laugheth so fondly"/>
        <underline method="pen" type="straight" language="EN" text="wennes in theyr throte, that"/>
        <underline method="pen" type="straight" language="EN" text="a verye foole"/>
        <underline method="pen" type="straight" language="EN" text="beehauiours, maners and gestures"/>
        <underline method="pen" type="straight" language="EN" text="menne knowne"/>
        <underline method="pen" type="straight" language="EN" text="dimynisheth muche reputation"/>
        <underline method="pen" type="straight" language="EN" text="choyse of friendes"/>
        <underline method="pen" type="straight" language="EN" text="must haue inwarde conuersation"/>
        <underline method="pen" type="straight" language="EN" text="in streicte amitie and vnseparble companye,"/>
        <underline method="pen" type="straight" language="EN" text="alike in wyll"/>
        <underline method="pen" type="straight" language="EN" text="in mynde"/>
        <underline method="pen" type="straight" language="EN" text="iudgement and inclunation"/>
        <underline method="pen" type="straight" language="EN" text="ignorant or wycked"/>
        <underline method="pen" type="straight" language="EN" text="the good, wyse, and dyscreete"/>
        <underline method="pen" type="straight" language="EN" text="doeth willingly felowshippe with his lyke"/>
        <underline method="pen" type="straight" language="EN" text="haue a respect in the"/>
        <underline method="pen" type="straight" language="EN" text="beeginning of these frendshippes"/>
        <underline method="pen" type="straight" language="EN" text="friendes,"/>
        <underline method="pen" type="straight" language="EN" text="the other to bee of thesame"/>
        <underline method="pen" type="straight" language="EN" text="getting or leesing reputation"/>
        <underline method="pen" type="straight" language="EN" text="finde very fewe true friendes"/>
        <underline method="pen" type="straight" language="EN" text="those Pylades &amp; Orestes"/>
        <underline method="pen" type="straight" language="EN" text="Theseus and Perithous"/>
        <underline method="pen" type="straight" language="EN" text="nor Scipio and Laelius"/>
        
        <underline method="pen" type="straight" language="EN" text="Men in the mountaines, with great bottles"/>
        <underline method="pen" type="straight" language="EN" text="vnder their"/>
        <underline method="pen" type="straight" language="EN" text="the drinki[n]g of snow water"/>
        <underline method="pen" type="straight" language="EN" text="Choise of friendes."/>
        
