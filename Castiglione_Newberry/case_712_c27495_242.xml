        <underline method="pen" type="straight" language="EN" text="amended by a woman"/>
        <underline method="pen" type="straight" language="EN" text="all creatures of mankinde be inferiour to"/>
        <underline method="pen" type="straight" language="EN" text="virgin our Lady"/>
        <underline method="pen" type="straight" language="EN" text="meddlinge holye matters"/>
        <underline method="pen" type="straight" language="EN" text="fonde reasoninges"/>
        <underline method="pen" type="straight" language="EN" text="seelie poore soules are kept close w[ith]out the pompous pride to seeke a name of holinesse emong"/>
        <underline method="pen" type="straight" language="EN" text="whan he fasteth"/>
        <underline method="pen" type="straight" language="EN" text="to annoint his face"/>
        <underline method="pen" type="straight" language="EN" text="that he maye appeere not to faste, and"/>
        <underline method="pen" type="straight" language="EN" text="in the markett place"/>
        <underline method="pen" type="straight" language="EN" text="Sinagoges"/>
        <underline method="pen" type="straight" language="EN" text="that the left hande knowe"/>
        <underline method="pen" type="straight" language="EN" text="no treasure in the world to be greater then to giue"/>
        <underline method="pen" type="straight" language="EN" text="example"/>
        <underline method="pen" type="straight" language="EN" text="thus hanging their head aside and"/>
        <underline method="pen" type="straight" language="EN" text="fastning their eyes vpon the grounde"/>
        <underline method="pen" type="straight" language="EN" text="spreadinge a report about"/>
        <underline method="pen" type="straight" language="EN" text="that they will not once speake to a woman"/>
        <underline method="pen" type="straight" language="EN" text="not eate anye thinge but raw herbes"/>
        <underline method="pen" type="straight" language="EN" text="smokye"/>
        <underline method="pen" type="straight" language="EN" text="with their side garmentes all to ragged and torne"/>
        <underline method="pen" type="straight" language="EN" text="they beeguile the simple"/>
        <underline method="pen" type="straight" language="EN" text="from falsifiynge willes sowinge"/>
        
