    <annotation>
        
        <marginalia hand="Italian" anchor_text="prooemio uideo non uitque opus esse suasorijs, propter">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>suasoria[e] no[n] egent proo[e]mio.</marginalia_text>
                </position>
            </language>
            <translation>Declamations do not need a prelude.</translation> <!-- M.B. I noticed some translations retain the Latin term suasoriae, I've opted for declamation here although there is no real satisificactory English equivalent to this term.-->
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="uerba rebus aptentur">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>uerba reb[u]s apta[n]da</marginalia_text>
                </position>
            </language>
            <translation>Words are to be adapted to things.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Theophrastus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Theophrastus.</marginalia_text>
                    <person name="Theophrastus"/>
                </position>
            </language>
            <translation>Theophrastus.</translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="Ego porr&ograve; ut prooemio uideo non utique opus esse suasorijs, propter quas dixi supr&agrave;"/>
        <underline method="pen" type="straight" language="LA" text="si mod&ograve; est sanus, non quaeritet, sed qu&agrave;m maxim&egrave; potest ciuili &amp; humano ingressu, mereri assensum deliberantis uelit."/>
        <underline method="pen" type="straight" language="LA" text="tumultuosius atq[ue] turbidius. Verborum"/>
