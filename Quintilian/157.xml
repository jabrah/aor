    <page filename="157.tif" reader="John Dee" pagination="151" signature="k 4"/> 
    <annotation>
        
        <marginalia hand="Italian" anchor_text="utilia honestis praeferimus, ut cu[m] suademus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Vtilia honestis interdu[m] pra[e]fere[n]da</marginalia_text>
                </position>
            </language> 
            <translation>Useful things are sometimes to be preferred over the honest ones.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Liberos enim natura omnes">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Liberi sum o[mn]es</marginalia_text> 
                </position>
            </language> 
            <translation>Everyone is free.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="uerbis qu&agrave;m re probabilius">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Verba reprobabilia</marginalia_text>
                </position>
            </language>          
            <translation>Contemptible words.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Pomeius">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Pompeius</marginalia_text>
                    <person name="Pompey"/>
                </position>
            </language>
            <translation>Pompey.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="omnis suasoria nihil est aliud, qu&agrave;m comparatio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Omnis suasoria est comparatio</marginalia_text>
                </position>
            </language> 
            <translation>Every advisory speech is a comparison.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Est utilitatis &amp; in tempore quaestio. Expedit, sed non nunc. Et in loco, Non hic. Et persona, Non nobis, non contra hos. 
            Et in genere agendi, Non sic. Et in modo">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>vtilitas in Tempora Loco persona g[e]n[er]e age[n]di modo</marginalia_text>
                </position>
            </language> 
            <translation>Utility, the time, place, person, method of action. </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="exempla plurimum in consiljs po&sharp-S;int, quia facilim&egrave; ad consentiendum homines ducuntur experimentis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Exempla sunt experimenta.</marginalia_text>
                </position>
            </language> 
            <translation>Examples are experiments.</translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="illa uanum, ambitiosum, stolidum, uerbis qu&agrave;m reprobabilius"/>
        
