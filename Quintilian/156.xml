                </position>
            </language>
            <translation>Utility.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="utilitatem despiciendam esse dicimus, ut honesta faciamus">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>honestas vtilitati non[n]u[m]q[uam]? pr[a]eponenda</marginalia_text>
