        <marginalia hand="Italian" anchor_text="consilium quidem uidetur, ubi nece&sharp-S;itas est">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Necessitas tollit consilium</marginalia_text>
